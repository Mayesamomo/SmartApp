@model IEnumerable<SmartApp.Models.Smartphone>

@{
    ViewData["Title"] = "Index";
}


<section class="page-section cta">
    <div class="container-fluid">
        <div class="row">
            <div>
                <a type="button" class="btn btn-primary pl-3" asp-action="Create">Create New</a>
            </div>
            <div class="col-sm-auto">
                <div class="">
                    <h2 class="section-heading mb-5">
                        <h2><span class="section-heading-upper" style="text-decoration:underline">List of Smartphones and prices</span></h2>
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Manufacturer)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Price)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Released)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.isAvailable)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OS)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Manufacturer)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Released)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.isAvailable)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OperatingSystemId)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <p class="address mb-5">
                            <em>
                                <strong>1116 DKIT null void</strong>
                                <br>
                                Carroll building up
                            </em>
                        </p>
                        <p class="mb-0">
                            <small>
                                <em>Call Anytime</em>
                            </small>
                            <br>
                            (000) 1234567890
                        </p>
                </div>
            </div>
        </div>
    </div>
</section>

